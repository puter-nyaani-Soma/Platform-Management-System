<body>
    <div id="background"></div>
<div class="top">
  <h1><%=code %></h1>
  <h3><%=heading %></h3>
</div>
<div class="container">
  <div class="ghost-copy">
    <div class="one"></div>
    <div class="two"></div>
    <div class="three"></div>
    <div class="four"></div>
  </div>
  <div class="ghost">
    <div class="face">
      <div class="eye"></div>
      <div class="eye-right"></div>
      <div class="mouth"></div>
    </div>
  </div>
  <div class="shadow"></div>
</div>
<div class="bottom">
    <p><%=message %></p>
  
    <div class="buttons">
        <% if (code == 403) {%>
            <span>
                <form action="/login" method="get">
        
        
                      <button class="btn">Login</button>
                    
                </form>
            </span>
            <% } %>
        
          <span>
          <form action="/home" method="get">
        
        
                <button class="btn">Home</button>
              
          </form>
          </span>
    </div>
</div>

<footer>
